<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CrossPlatformApp"
             x:Class="CrossPlatformApp.MainPage">

    <StackLayout
           HorizontalOptions="Center"
           VerticalOptions="StartAndExpand">
        <!-- Place new controls here -->
        <Label Text="Notes"
           HorizontalOptions="Center"  HeightRequest="75"
           FontSize="50" FontAttributes="Bold"/>
        <Editor x:Name="textEditor" Placeholder="Enter Note"
                HeightRequest="100"></Editor>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" x:Name="SaveBtn" Text="Save" Clicked="SaveBtn_Clicked"></Button>
            <Button Grid.Column="1" x:Name="DeleteBtn" Text="Delete" Clicked="DeleteBtn_Clicked"></Button>
            <Button Grid.Column="2" x:Name="ClearAllBtn" Text="Clear" Clicked="ClearAllBtn_Clicked"></Button>
        </Grid>
        <Entry x:Name="FileNameEntry" Placeholder="Enter File Name"></Entry>
        <Button x:Name="ReadFileBtn" Text="Read File" Clicked="ReadFileBtn_Clicked"></Button>
    </StackLayout>

</ContentPage>
